<%= "Edit #{@post.name}: #{@post.content}" %>
<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>New Title</p><input type="text" id="name" name="name">
  <p>New Content</p><input type="text" id="content" name="content">
  <input type="submit" value="submit" name="submit">
</form>
